name: Publish NPM Package

on:
  release:
    types: [created]
  workflow_dispatch:

permissions:
  contents: read
  id-token: write # Needed for provenance

jobs:
  publish:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v5

      - name: Setup Node.js with npm
        uses: actions/setup-node@v4
        with:
          node-version: '22.x'
          registry-url: 'https://registry.npmjs.org'

      - name: Install dependencies
        uses: ./.github/actions/install-dependencies
        with:
          node_version: ${{ inputs.node_version }}
          pnpm_version: 8
          cache: 'pnpm'

      - name: Nuxt prepare
        run: pnpm dev:prepare

      - name: Debug
        run: |
          ls -la
          git status

      - name: Clean working directory
        run: git checkout pnpm-lock.yaml # in case for whatever reason the lockfile is out of sync, there won't be interference with npm publish.

      - name: Publish to npm
        run:
          | # --no-git-checks: temporary workaround for ERR_PNPM_GIT_UNCLEANâ€‰ Unclean working tree. Commit or stash changes first.
          cd packages/nuxt
          pnpm publish --no-git-checks
        env:
          NODE_AUTH_TOKEN: ${{ secrets.NPM_TOKEN }}
