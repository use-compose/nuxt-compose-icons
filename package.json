{
  "name": "nuxt-compose-icons-root",
  "author": "",
  "private": true,
  "scripts": {
    "clean": "find . -name 'node_modules' -exec rm -rf '{}' + && find . -name 'dist' -exec rm -rf '{}' + && find . -name '.nuxt' -exec rm -rf '{}' + && rm -rf pnpm-lock.yaml",
    "dev": "pnpm --filter nuxt-compose-icons dev",
    "dev:build": "pnpm --filter nuxt-compose-icons dev:build",
    "dev:generate": "pnpm --filter nuxt-compose-icons dev:generate",
    "dev:prepare": "pnpm --filter nuxt-compose-icons dev:prepare",
    "docs:build": "pnpm --filter docs docs:build",
    "docs:dev": "pnpm --filter docs docs:dev",
    "docs:preview": "pnpm --filter docs docs:preview",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"**/*.{scss,css}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{vue,scss,css}\"",
    "prepack": "pnpm --filter nuxt-compose-icons prepack",
    "prepare": "husky",
    "release": "pnpm --filter nuxt-compose-icons release",
    "rimraf": "./node_modules/rimraf/bin.js",
    "syncpack": "pnpm syncpack:fix && pnpm syncpack:format",
    "syncpack:fix": "syncpack fix --dependency-types prod,dev",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint --dependency-types prod,dev",
    "test": "pnpm --filter nuxt-compose-icons test",
    "typedoc": "typedoc"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-vue": "10.6.2",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "stylelint": "16.23.1",
    "stylelint-config-recommended-vue": "1.6.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-config-standard-scss": "16.0.0",
    "syncpack": "14.0.0-alpha.32",
    "typedoc": "0.28.15",
    "typedoc-plugin-markdown": "4.9.0",
    "typedoc-vitepress-theme": "1.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "vite": "7.2.7"
  },
  "keywords": [],
  "license": "ISC",
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
